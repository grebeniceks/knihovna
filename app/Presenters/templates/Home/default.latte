{block content}
        <nav class="navbar text-light  shadow sticky-top nav center block mx-auto  " style="border: #0e1012 solid 10px; background-color: #0e1012">
            <h1 href="#">Books</h1>
            <h2 class=""><a n:href="Edit:create">Add new book</a></h2>
            <h2><a n:href="Edit:createAuthor">Add new author</a></h2>
        </nav>

    <div class="container w-75 center block mx-auto pt-5">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
            {foreach $books as $book}
                <div class="col mb-4 " >
                    <div class="card h-100 bg-dark border-5 shadow" style="color: #adb5bd; border-color: #adb5bd">
                        <div class="card-header p-0  btn-edit shadow " style="height: 5rem">
                            <a class="btn btn-primary bold w-100 h-100" style="border-radius: 0; display: flex; align-items: center; justify-content: center;" href="{link Book:show $book->id}">
                                <h5 class="">{$book->name}</h5>
                            </a>
                        </div>
                        <div class="card-body d-flex flex-column justify-content-center text-center">
                            {foreach $authors as $author}
                                {if $author->id === $book->id_author}
                                    <p><b class="text-light">Author: </b><br>{$author->name} {$author->surname}</p>
                                {/if}
                            {/foreach}
                            <p class="card-text" style=""><b class="text-light">Description:</b><br>{$book->description}</p>
                            <p class="card-text"><b class="text-light">Year:</b> {$book->year} <b class="text-light">Pages:</b> {$book->pages}</p>
                        </div>
                        <div class="card-footer p-0 btn-edit">
                            <a n:href="Edit:edit $book->id" class="btn btn-primary bold w-100 h-100" style="border-radius: 0; display: flex; align-items: center; justify-content: center;">Edit</a>
                        </div>
                    </div>
                </div>
            {/foreach}
        </div>
    </div>
{/block}



<style>


    html {
        font: normal 18px/1.3 Georgia, "New York CE", utopia, serif;
        color: #666;
        -webkit-text-stroke: 1px rgba(0, 0, 0, 0);
